<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".E_MEET.Activities.Login">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E_MEET"
                android:layout_marginStart="130dp"
                android:textSize="20sp"
                android:textColor="#fff"/>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel"
        android:orientation="vertical"
        android:background="@drawable/my_design">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:id="@+id/rel2">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/image"
                    android:src="@drawable/bee_pics"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/image"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rel3"
                    >




                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding = "13dp"
                            android:id="@+id/Loginname"
                            android:hint="email"
                            android:background="@drawable/edittext_background"
                            android:drawableLeft="@drawable/ic_email"
                            android:defaultFocusHighlightEnabled="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_below="@+id/rel3"
                    android:id="@+id/rel4"
                    >


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:padding="13dp"
                            android:background="@drawable/edittext_background"
                            android:hint="password"
                            android:id="@+id/password"

                            android:drawableLeft="@drawable/ic_lock"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="350dp"
                        android:layout_centerVertical="true">


                    </RelativeLayout>

                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel4"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/ll">

                    <CheckBox
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:id="@+id/checkbox"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember UserName/Email"
                        android:layout_marginStart="12dp"
                        android:textSize="17sp"
                        android:textColor="#fff"/>

                </LinearLayout>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="20dp"
                    android:text="Sign In"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_customize"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#fff"
                    android:id="@+id/signIn"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signIn"
                    android:layout_marginTop="20dp"
                    android:text="create account"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_customize"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#fff"
                    android:id="@+id/account"/>






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginAlternative"
                    android:layout_below="@+id/account"
                    android:text="or Login With"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:contextClickable="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/loginAlternative"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/layout">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/ic_facebook">

                    </ImageView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_twitter"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp">

                    </ImageView>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_google_plus"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:id="@+id/goggle_sign">
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forgotPassword"
                    android:layout_below="@+id/layout"
                    android:text="FORGOT PASSWORD ??THEN RECOVER"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:textSize="15sp"
                    android:layout_marginTop="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:contextClickable="true"
                    android:textColor="#fff"/>


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>