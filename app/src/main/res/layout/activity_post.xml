<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".E_MEET.Activities.PostActivity">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/updatePostPageToolBar"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatePostPageToolBar"

        android:background="@drawable/my_work">


        <ImageButton
            android:id="@+id/inputPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_add_a_photo"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true">

        </ImageButton>

        <EditText
            android:id="@+id/updateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_below="@+id/inputPhoto"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:background="@drawable/edittext_background"
            android:hint="write something about  your post">

        </EditText>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Update post"
            android:background="@drawable/button_customize"
            android:textColor="#fff"
            android:padding="12dp"
            android:layout_below="@+id/updateText"
            android:id="@+id/updatePost"
            android:layout_marginTop="15dp"/>




    </RelativeLayout>


</RelativeLayout>