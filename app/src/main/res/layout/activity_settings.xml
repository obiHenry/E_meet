<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".E_MEET.Activities.SettingsActivity"
    android:background="@drawable/my_design">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/settingsToolBar"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_below="@+id/settingsToolBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingsProfileImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary">

            </de.hdodenhof.circleimageview.CircleImageView>

            <EditText
                android:id="@+id/settingsUserStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsProfileImage"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edittext_background"
                android:hint="profile status"
                android:padding="30dp"
                android:textSize="20sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserStatus"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="profile userName"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="profile fullname"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserFullName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint=" country"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserCountry"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="DOB"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserDOB"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="gender"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserGender"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="phone number"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/settingsUserRelationshipStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsUserPhoneNumber"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="Relationship status"
                android:padding="12dp"
                android:textSize="16sp"
                android:textStyle="bold"></EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/settingsUpdateButton"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_below="@+id/settingsUserRelationshipStatus"
                android:text="Update Account"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_customize"
                android:layout_marginBottom="20dp">

            </Button>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>