<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginTheme">
        <activity android:name=".E_MEET.Activities.MyPostsActivity"
            android:parentActivityName=".E_MEET.Activities.ProfileActivity">

        </activity>
        <activity
            android:name=".E_MEET.Activities.ChatActivity"
            android:parentActivityName=".E_MEET.Activities.MainActivity" />
        <activity android:name=".E_MEET.Activities.FriendsActivity" />
        <activity android:name=".E_MEET.Activities.PersonFriendActivity" />
        <activity android:name=".E_MEET.Activities.CommentActivity" />
        <activity
            android:name=".E_MEET.Activities.FindFriendsActivity"
            android:parentActivityName=".E_MEET.Activities.MainActivity" />
        <activity android:name=".E_MEET.Activities.ProfileActivity" />
        <activity
            android:name=".E_MEET.Activities.SettingsActivity"
            android:parentActivityName=".E_MEET.Activities.MainActivity" />
        <activity android:name=".E_MEET.Activities.ClickPostActivity" />
        <activity android:name=".E_MEET.Activities.PostActivity" />
        <activity android:name=".E_MEET.Activities.SetUpActivity" />
        <activity
            android:name=".E_MEET.Activities.ForgotPassword"
            android:parentActivityName=".E_MEET.Activities.MainActivity" />
        <activity android:name=".E_MEET.Activities.CreateAccount" />
        <activity android:name=".E_MEET.Activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".E_MEET.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/LoginTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>